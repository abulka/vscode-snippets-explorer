{
	"name": "snippets-explorer",
	"displayName": "Snippets Explorer",
	"description": "Displays all available snippets in a TreeView",
	"version": "0.0.5",
	"engines": {
		"vscode": "^1.47.0"
	},
	"categories": [
		"Snippets",
		"Other"
	],
	"keywords": [
		"snippet",
		"treeview",
		"organise",
		"explore"
	],
	"publisher": "wware",
	"icon": "images/icon.png",
	"author": {
		"name": "Andy Bulka",
		"url": "https://github.com/abulka",
		"email": "abulka@gmail.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/abulka/vscode-snippets-explorer"
	},
	"activationEvents": [
		"onCommand:extension.snippet_inserter",
		"onCommand:extension.enumerateSnippets",
		"onView:exampleView",
		"onView:snippetsExplorerView"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.snippet_inserter",
				"title": "Snippets Explorer: Insert Snippet from Treeview"
			},
			{
				"command": "snippetsExplorer.refreshEntry",
				"title": "Refresh (rescan available snippets)",
				"icon": {
					"light": "images/light/refresh.svg",
					"dark": "images/dark/refresh.svg"
				}
			}
		],
		"views": {
			"explorer": [
				{
					"id": "snippetsExplorerView",
					"name": "Snippets Explorer"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "snippetsExplorer.refreshEntry",
					"when": "view == snippetsExplorerView",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"dependencies": {
		"json5": "^2.1.3",
		"winston": "^3.3.3",
		"jsonc-parser": "^2.3.0"
	},
	"devDependencies": {
		"@types/vscode": "^1.47.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
